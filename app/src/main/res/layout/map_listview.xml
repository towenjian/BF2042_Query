<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
              android:orientation="vertical"
                                                   android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="80dp"
                  android:orientation="horizontal">
        <ImageView android:layout_width="200dp" android:layout_height="80dp"
                   android:id="@+id/map_img"
                   android:src="@drawable/map_shalou"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="80dp"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:gravity="center">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_weight="1">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_weight="1">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="地图名："
                              android:textColor="@color/black"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/map_name"
                              android:text="沙漏"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_weight="1">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="胜率："
                              android:textColor="@color/black"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/map_winparet"
                              android:text="沙漏"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_weight="1">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_weight="1">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="获胜次数："
                              android:textColor="@color/black"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/map_win"
                              android:text="沙漏"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_weight="1">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="失败次数："
                              android:textColor="@color/black"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/map_lose"
                              android:text="沙漏"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_weight="1">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_weight="1">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="次数："
                              android:textColor="@color/black"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/map_match"
                              android:text="沙漏"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_weight="1">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="时间："
                              android:textColor="@color/black"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/map_time"
                              android:text="1小时"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="5dp"
                  android:background="#33cccc">
    </LinearLayout>


</LinearLayout>