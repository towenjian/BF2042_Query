<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center"
              android:paddingLeft="10dp"
              android:layout_height="80dp">
    <ImageView android:layout_width="40dp" android:layout_height="40dp"
               android:id="@+id/image"
               android:layout_marginTop="10dp"
               android:layout_margin="20dp"
               android:src="@drawable/amry1"
               android:scaleType="centerCrop"/>
    <TextView android:layout_width="200dp" android:layout_height="match_parent"
              android:text="武器"
              android:layout_weight="1"
              android:id="@+id/text3"
              android:layout_toEndOf="@+id/image"
              android:gravity="center"
              android:textSize="20sp"
              android:textColor="@color/black"/>
    <ImageView android:layout_width="60dp" android:layout_height="60dp"
               android:src="@drawable/come"
               android:layout_toRightOf="@id/text3"/>
</LinearLayout>