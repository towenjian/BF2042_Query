<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="#f1f3f5"
              android:layout_height="match_parent" android:orientation="vertical">
    <View android:layout_width="match_parent" android:layout_height="5dp"
          android:background="#16fde0"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="40dp"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="40dp"
                  android:text="已收藏ID"
                  android:gravity="center"
                  android:textSize="20sp"
                  android:textColor="@color/black"/>
        <ImageButton android:layout_width="40dp" android:layout_height="40dp"
                     android:id="@+id/popup_btn"
                     android:src="@drawable/getout1"
                     android:layout_alignParentRight="true"
                     android:background="#f1f3f5"/>
    </RelativeLayout>
    <View android:layout_width="match_parent" android:layout_height="5dp"
          android:background="@color/black"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="400dp"
                  android:orientation="vertical">
        <GridView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/collect_lv"
                  android:numColumns="auto_fit"
                  android:verticalSpacing="10dp"
                  android:padding="5dp"
                  android:layout_gravity="center"/>

    </LinearLayout>
    <TextView android:layout_width="match_parent" android:layout_height="40dp"
              android:text="ID最多收藏10个，请注意！\n长按取消"
              android:textColor="@color/black"
              android:textSize="15sp"
              android:gravity="center"/>
</LinearLayout>